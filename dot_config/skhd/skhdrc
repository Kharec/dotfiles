# Reorganize windows
alt - r : yabai -m space --rotate 90
alt - f : yabai -m window --toggle float
alt - m : yabai -m window --toggle zoom-fullscreen

# Resizing
alt - q: yabai -m window --resize left:20:0 || yabai -m window --resize right:20:0
alt - w: yabai -m window --resize left:-20:0 || yabai -m window --resize right:-20:0


# Focus window
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - u : yabai -m window --focus north
alt - k : yabai -m window --focus east

# Moving windows
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - u : yabai -m window --swap north
shift + alt - k : yabai -m window --swap east

# move window to prev and next space
shift + alt - p : yabai -m window --space prev
shift + alt - n : yabai -m window --space next

# focus display
shift + alt - r : yabai -m display --focus recent

